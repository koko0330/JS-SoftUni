function addItem() {
    let textItem = document.getElementById('newItemText').value
    let textValue = document.getElementById('newItemValue').value

    let select = document.getElementById('menu')


    let option = document.createElement('option')
    option.textContent = textItem
    option.value = textValue
    select.appendChild(option)

    textItem = document.getElementById('newItemText').value = ''
    textValue = document.getElementById('newItemValue').value = ''

   
}
